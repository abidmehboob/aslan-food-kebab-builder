{
  "name": "aslan-food-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for Aslan Food kebab builder application",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "SET NODE_ENV=production && node server.js",
    "dev": "SET NODE_ENV=development && node server.js",
    "prod": "pm2 start ecosystem.config.js --env production",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "seed": "node scripts/seedDatabase.js",
    "db:migrate": "node scripts/migrate.js",
    "build": "echo 'No build step required for Node.js backend'",
    "logs": "pm2 logs",
    "restart": "pm2 restart all",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all"
  },
  "keywords": [
    "food",
    "kebab",
    "restaurant",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Aslan Food Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.18.3",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "clean-css-cli": "^5.6.3",
    "eslint": "^8.47.0",
    "html-minifier": "^4.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3",
    "terser": "^5.44.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  }
}
